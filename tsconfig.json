{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules/**",
    "**/node_modules/**"
  ],
  "lib": ["ES2020"]
}